{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "pkgs": ["chromium", "python38", "gcc"]
        },
        "install": {
          "cmds": ["npm ci"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE", 
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30,
    "runtime": "node"
  }
}